{
  "compilerOptions": {
    "types": [
      "next",
      "node",
      "react",
      "react-dom"
    ],
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleDetection": "force",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/@types/**/*.ts",
    "@types",
    "next-env.d.ts",
    "next-server.d.ts",
    "src/**/*.ts",
    "tailwind.config.cjs",
    "test/**/*.ts",
    ".next/types/**/*.ts",
    "postcss.config.mjs",
    "lib", 
    "types" ],
  "exclude": [
    "node_modules"
  ]
}
